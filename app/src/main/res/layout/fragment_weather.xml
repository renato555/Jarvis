<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:padding="30dp">
            <TextView
                android:id="@+id/today"
                android:layout_width="@dimen/weather_information_size"
                android:layout_height="@dimen/weather_information_size"
                android:paddingRight="8dp"
                android:layout_gravity="center"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/todayImage"
                android:layout_width="@dimen/weather_picture_dim"
                android:layout_height="@dimen/weather_picture_dim"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/todayText"
                android:layout_width="@dimen/weather_information_size"
                android:layout_height="@dimen/weather_information_size"
                android:paddingLeft="16dp"
                android:layout_gravity="center"
                android:gravity="center"/>
         </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="30dp">
            <TextView
                android:id="@+id/tomorrow"
                android:layout_width="@dimen/weather_information_size"
                android:layout_height="@dimen/weather_information_size"
                android:paddingRight="8dp"
                android:layout_gravity="center"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/tomorrowImage"
                android:layout_width="@dimen/weather_picture_dim"
                android:layout_height="@dimen/weather_picture_dim"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/tomorrowText"
                android:layout_width="@dimen/weather_information_size"
                android:layout_height="@dimen/weather_information_size"
                android:paddingLeft="16dp"
                android:layout_gravity="center"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="30dp">
            <TextView
                android:id="@+id/dayAfterTomorrow"
                android:layout_width="@dimen/weather_information_size"
                android:layout_height="@dimen/weather_information_size"
                android:paddingRight="8dp"
                android:layout_gravity="center"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/dayAfterTomorrowImage"
                android:layout_width="@dimen/weather_picture_dim"
                android:layout_height="@dimen/weather_picture_dim"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/dayAFterTomorrowText"
                android:layout_width="@dimen/weather_information_size"
                android:layout_height="@dimen/weather_information_size"
                android:paddingLeft="16dp"
                android:layout_gravity="center"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>